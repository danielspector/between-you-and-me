      <h2><a target="_blank" href="<%= business[:the_url] %>"><%= business[:name] %></a></h2>
      <p class="yelp-point"><%= business[:address] %></p>
      <p><img src="<%= business[:rating_img] %>" width=100><p>
      <p><%= business[:review_count] %> reviews</p>
    </div>
  <% end %>
</div>


