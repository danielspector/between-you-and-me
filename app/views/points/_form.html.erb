<div class="row">
  <div class="col-md-4 col-md-offset-4" id="vcenter">
    <h1>BETWEEN YOU & ME</h1>

    <%= form_tag points_path, id: 'point_form', role: "form" do %>
      <%= token_tag %>

      <div class="form-group">
        <%= text_field_tag "point[address1]", "", class: "form-control input-medium", placeholder: "What's Your Address?" %>
      </div>

      <div class="form-group">
        <%= text_field_tag "point[address2]", "", class: "form-control input-medium", placeholder: "What's Your Friend's Address?" %>
      </div>


      <div class="form-group">
          <input id="autocomplete" name="search[term]" class="form-control input-medium" placeholder="Where do you want to go together?">
        <!-- <select class="chosen-select" name="search[term]" data-placeholder="Choose a Yelp Category!" class="form-control input-medium">
          <option value=""></option>
          <#% @categories.each do |cat| %>
          <option><%#= cat.name %></option>
          <%# end %>
        </select> -->
      </div>
      <%= submit_tag "Get the hell out of here", :id => 'find_point_button', class: "btn btn-warning btn-lg btn-block" %>
    <!--   <input type="button" id="go" value="Find Me!" class="btn btn-warning" /> -->
    <% end %>
  </div>
</div>
